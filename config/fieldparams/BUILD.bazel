load("@prysm//tools/go:def.bzl", "go_library", "go_test")

go_library(
    name = "go_default_library",
    srcs = select({
        "//config:mainnet": ["mainnet.go"],
        "//config:minimal": ["minimal.go"],
    }),
    importpath = "github.com/prysmaticlabs/prysm/v4/config/fieldparams",
